<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="720" prefWidth="1280" stylesheets="@../css/Style.css"
            xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="view.SignupPageController" id="pane">

    <top>
        <VBox alignment="CENTER">
            <Text id="title" text="CupHead"/>
        </VBox>
    </top>

    <center>
        <VBox spacing="15" alignment="CENTER">
            <Label text="Username"/>
            <TextField fx:id="username" promptText="enter your username"/>
            <Label text="Password"/>
            <TextField fx:id="password" promptText="enter your password"/>
            <Label id="message" fx:id="message"/>
            <Button text="SignUp" onMouseClicked="#signup"/>
            <Button text="Login" onMouseClicked="#login"/>
            <Button text="Play as Guest" onMouseClicked="#playAsGuest"/>
        </VBox>

    </center>

</BorderPane>
